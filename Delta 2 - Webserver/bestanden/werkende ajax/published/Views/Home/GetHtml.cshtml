@model IEnumerable<AjaxEnjQuery.ViewModels.SpeakerViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            <img src="@Url.Content("~/images/speaker/" +item.PictureUrl)" 
                 title="@item.FullName" width="30" height="40" alt="Picture speaker"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>

    </tr>
}
</table>
